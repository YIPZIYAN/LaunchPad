<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="121dp">

        <ImageView
            android:id="@+id/imgViewProfile"
            android:layout_width="57dp"
            android:layout_height="65dp"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:contentDescription="Profile Picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.489"
            app:srcCompat="@drawable/round_account_circle_24"
            tools:src="@drawable/round_account_circle_24" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/post_card"
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="339dp"
            android:layout_height="108dp"
            android:layout_marginStart="4dp"

            android:layout_marginTop="4dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toEndOf="@+id/imgViewProfile"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">


                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Carolyn Ting"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="7dp"
                    android:text="1d"
                    android:textSize="11sp"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:text="â€¢"
                    app:layout_constraintStart_toEndOf="@+id/txtUsername"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtComment"
                    android:layout_width="306dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:text="Feeling great to be teaching again, it is a good action to enhae your self confidence."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtUsername" />


                <!-- Title, secondary and supporting text -->


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>