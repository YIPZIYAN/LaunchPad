<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ChatFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/md_theme_light_primary"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/messages"
            app:titleTextColor="@color/md_theme_light_onPrimary"
            app:menu="@menu/chat_menu"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:cardCornerRadius="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/chat_avatar_container"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="33dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/chat_avatar"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:contentDescription="sample"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_launcher_background" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/chat_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="14dp"
                        android:text="GOH CHUN YEN"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@id/chat_avatar_container"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/chat_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="12dp"
                        android:text="1:56 PM"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/chat_name" />

                    <TextView
                        android:id="@+id/chat_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Hi, yesterday I sent you the file which is related to xxx."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintEnd_toStartOf="@id/chat_messages_number"
                        app:layout_constraintStart_toStartOf="@id/chat_name"
                        app:layout_constraintTop_toBottomOf="@id/chat_name"
                        />

                    <TextView
                        android:id="@+id/chat_messages_number"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/chat_messages_number_background"
                        android:paddingTop="3dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/md_theme_light_onPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/chat_content"
                        />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:dividerColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/chat_avatar_container" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                android:clickable="true"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chat">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/chat_avatar_container2"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="33dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/chat_avatar2"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:contentDescription="sample"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_launcher_background" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/chat_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="14dp"
                        android:text="YIP ZI YAN"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@id/chat_avatar_container2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/chat_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="12dp"
                        android:text="Yesterday"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/chat_name2" />

                    <TextView
                        android:id="@+id/chat_content2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="My education level is Bachelor of Information Technology (Honours), Software System Development"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintEnd_toStartOf="@id/chat_messages_number2"
                        app:layout_constraintStart_toStartOf="@id/chat_name2"
                        app:layout_constraintTop_toBottomOf="@id/chat_name2"
                        />

                    <TextView
                        android:id="@+id/chat_messages_number2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/chat_messages_number_background"
                        android:paddingTop="3dp"
                        android:text="9+"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/md_theme_light_onPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/chat_content2"
                        />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:dividerColor="@color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/chat_avatar_container2" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>